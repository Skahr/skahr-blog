    <table class="table">
        <tr>
            <td>{{ 'profile.show.username'|trans }}</td>
            <td>{{ user.username }}</td>
            <td>
                <a href="{{ path('fos_user_profile_edit') }}">
                    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
